{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": false,
    "strict": false,
    "paths": {
      "@outshine/test-util": ["libs/test-util/src"],
      "@outshine/test-util/*": ["libs/test-util/src/*"]
    },
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
